<Window x:Class="BuvarRobot_VD_.NevValaszto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuvarRobot_VD_"
        mc:Ignorable="d"
        Title="NevValaszto" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Adja meg a nevét:" Margin="10"/>
        <TextBox x:Name="txtNev" Grid.Row="0" Margin="120,10,10,10"/>

        <Button Content="OK" Grid.Row="1" Margin="10" Click="Button_Click"/>
    </Grid>
</Window>
